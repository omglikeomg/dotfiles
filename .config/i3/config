set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font -misc-ohsnap-medium-r-normal--12-87-100-100-c-70-iso8859-1
# class                   border     backgr     txt        indicator  child_border
client.focused            #d4d22b  #d4d22b    #050905  #efe0b8    #d4d22b
client.focused_inactive   #8cbc81  #8cbc81    #050905  #18650e    #8cbc81
client.unfocused          #8cbc81  #8cbc81    #050905  #18650e    #8cbc81
